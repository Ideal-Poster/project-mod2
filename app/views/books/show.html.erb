
<h1> <%= @book.title %></h1>

<iframe width="560" height="315" src= <%="#{@book.video_url}"%>  frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

<%= button_to "All Books 📚", books_path, method: :get %>


<% if FavoriteBook.find_by(user_id: @user.id, book_id: @book.id) %>
  <%= button_to "Unfavorite ❌", controller: "books", action: "favorite" %>
<% else %>
  <%= button_to "Favorite ⭐️", controller: "books", action: "favorite" %>
<% end %>
