
<h1> <%= @rhyme.title %></h1>

<iframe width="560" height="315" src= <%="#{@rhyme.video_url}"%>  frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>


<%= button_to "All Rhymes 📚", rhymes_path, method: :get %>

<% if FavoriteRhyme.find_by(user_id: @user.id, rhyme_id: @rhyme.id) %>
  <%= button_to "Unfavorite ❌", controller: "rhymes", action: "favorite" %>
<% else %>
  <%= button_to "Favorite ⭐️", controller: "rhymes", action: "favorite" %>
<% end %>
