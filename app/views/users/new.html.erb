<h1>Create A New User Account</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <h4>ERROR: <%= msg %></h4>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.submit %>
<% end %>